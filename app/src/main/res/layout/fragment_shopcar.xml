<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout"></include>

    <com.huilianonline.yxk.view.refresh.PullToRefreshListView
        android:id="@+id/list_shopcar_list_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@color/color_emputy_grey"
        android:listSelector="@color/white"
        android:scrollbars="none" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="top"
        android:background="@color/line_seperate" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@drawable/img_shopcar_unselect"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textColor="@color/title_layout_black"
            android:textSize="15sp"
            android:text="全选" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/title_layout_black"
            android:text="合计:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:textColor="@color/title_layout_red"
            android:textSize="15sp"
            android:text="¥4488" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@color/title_layout_red"
            android:gravity="center"
            android:text="结算"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>