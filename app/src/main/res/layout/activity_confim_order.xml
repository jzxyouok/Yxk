<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout_common"></include>

    <com.huilianonline.yxk.view.refresh.PullToRefreshListView
        android:id="@+id/list_order_confirm_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@color/color_emputy_grey"
        android:listSelector="@color/white"
        android:scrollbars="none" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="top"
        android:background="@color/line_seperate" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/title_layout_black"
            android:text="粮食卡扣款："/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textColor="@color/title_layout_red"
            android:textSize="15sp"
            android:text="¥2288.00"/>

        <TextView
            android:id="@+id/txt_send_order"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/title_layout_red"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>